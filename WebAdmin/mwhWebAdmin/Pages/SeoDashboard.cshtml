    <div class="col-md-3">
        <div class="admin-card bg-primary">
            <div class="admin-card-body">
                <div class="admin-card-icon">
                    <i class="fas fa-newspaper"></i>
                </div>
                <div class="admin-card-content">
                    <h3>@Model.SeoStats["TotalArticles"]</h3>
                    <p>Total Articles</p>

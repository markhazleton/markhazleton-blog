{
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Information",
                "Microsoft.AspNetCore": "Warning",
                "mwhWebAdmin.Article.Services.AiResponseLogger": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "C:\\GitHub\\MarkHazleton\\markhazleton-blog\\logs\\app.log",
                    "rollingInterval": "Day",
                    "rollOnFileSizeLimit": true,
                    "fileSizeLimitBytes": 10485760,
                    "retainedFileCountLimit": 10,
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [ "FromLogContext" ]
    },
    "AllowedHosts": "*",
    "ArticlesFilePath": "../src/articles.json",
    "ProjectsFilePath": "../src/projects.json",
    "ImageAssetsPath": "../src/assets/img",
    "SrcPath": "C:\\GitHub\\MarkHazleton\\markhazleton-blog\\src",
    "DocsPath": "C:\\GitHub\\MarkHazleton\\markhazleton-blog\\docs",
    "OpenAI": {
        "Model": "gpt-5",
        "MaxTokensArticle": 16000,
        "MaxTokensSeo": 3000,
        "Temperature": 0.3
    },
    "AiResponseLogs": {
        "Directory": "C:\\GitHub\\MarkHazleton\\markhazleton-blog\\logs\\ai-responses",
        "RetentionDays": 30
    }
}

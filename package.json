{
    "title": "Mark Hazleton Blog",
    "name": "markhazleton-blog",
    "version": "9.0.2",
    "scripts": {
        "build": "node scripts/build.js",
        "build:pug": "node scripts/build.js --pug",
        "build:scss": "node scripts/build.js --scss",
        "build:scripts": "node scripts/build.js --scripts",
        "build:sections": "node scripts/build.js --sections",
        "build:assets": "node scripts/build.js --assets",
        "build:sitemap": "node scripts/build.js --sitemap",
        "build:rss": "node scripts/build.js --rss",
        "build:no-cache": "node scripts/build.js --no-cache",
        "build:sequential": "node scripts/build.js --no-parallel",
        "clean": "node scripts/clean.js",
        "clean:cache": "node -e \"require('fs-extra').removeSync('.build-cache'); console.log('ðŸ§¹ Build cache cleared')\"",
        "start": "npm run build && node scripts/start.js",
        "start:watch": "npm run build && node scripts/start.js --watch",
        "dev": "npm run start:watch",
        "seo:audit": "node scripts/seo-validation-report.js",
        "audit:perf": "lhci autorun",
        "audit:links": "echo Use lycheeverse/lychee-action in CI",
        "audit:seo": "node tools/seo-a11y-checks.mjs",
        "audit:a11y": "node -e \"require('fs').mkdirSync('artifacts',{recursive:true})\" && pa11y-ci --config pa11yci.json --reporter json > artifacts/a11y.json 2> artifacts/a11y.stderr.log",
        "audit:ssl": "tsx tools/ssl-expiry.ts",
        "audit:all": "npm run audit:perf && npm run audit:seo && npm run audit:ssl",
        "report:monthly": "node tools/report-monthly.mjs",
        "update-rss": "node build/utils/update-rss.js",
        "update-sitemap": "node build/utils/update-sitemap.js"
    },
    "description": "Mark Hazleton's Blog",
    "keywords": [
        "css",
        "sass",
        "html",
        "responsive"
    ],
    "homepage": "https://github.com/markhazleton/markhazleton-blog",
    "bugs": {
        "url": "https://github.com/markhazleton/markhazleton-blog/issues",
        "email": "mark@markhazleton.com"
    },
    "license": "MIT",
    "author": "Mark Hazleton (https://markhazleton.com)",
    "contributors": [
        "David Miller (https://davidmiller.io/)",
        "Mark Hazleton (https://markhazleton.com)"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/markhazleton/markhazleton-blog.git"
    },
    "dependencies": {
        "cheerio": "^1.1.2",
        "fs-extra": "^11.3.1",
        "glob": "^11.0.3",
        "prismjs": "^1.30.0",
        "terser": "^5.44.0"
    },
    "devDependencies": {
        "@lhci/cli": "^0.15.1",
        "autoprefixer": "10.4.21",
        "bootstrap": "^5.3.8",
        "bootstrap-icons": "^1.13.1",
        "browser-sync": "^3.0.4",
        "chokidar": "^4.0.3",
        "commander": "^14.0.0",
        "cssnano": "^7.1.1",
        "dayjs": "^1.11.18",
        "node-html-parser": "^7.0.1",
        "npm-check-updates": "^18.0.3",
        "pa11y-ci": "^4.0.1",
        "postcss": "8.5.6",
        "prettier": "3.6.2",
        "pug": "3.0.3",
        "sass": "^1.92.1",
        "shelljs": "0.10.0",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2",
        "upath": "^2.0.1"
    },
    "config": {
        "siteUrl": "https://markhazleton.com",
        "sitemapUrl": "https://markhazleton.com/sitemap.xml"
    }
}

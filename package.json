{
    "title": "Mark Hazleton Blog",
    "name": "markhazleton-blog",
    "version": "9.0.2",
    "scripts": {
        "build": "npm run clean && npm run build:pug && npm run build:scss && npm run build:modern-scss && npm run build:scripts && npm run build:assets && npm run update-rss && npm run update-sitemap",
        "build:assets": "node scripts/build-assets.js",
        "build:modern-scss": "node scripts/build-modern-scss.js",
        "build:pug": "node scripts/build-pug.js",
        "build:scripts": "node scripts/build-scripts.js",
        "build:scss": "node scripts/build-scss.js",
        "clean": "node scripts/clean.js",
        "start": "npm run build && node scripts/start.js",
        "start:debug": "npm run build && node scripts/start-debug.js",
        "start:http": "npm run build && node http-server.js",
        "serve": "npm run build && node simple-serve.js",
        "serve:quick": "node simple-serve.js",
        "update-deps": "npm-check-updates -u",
        "update-rss": "node scripts/update-rss.js",
        "update-sitemap": "node scripts/update-sitemap.js",
        "migrate:seo": "node scripts/migrate-to-dynamic-seo.js",
        "enhance:seo": "node scripts/enhance-seo-data.js",
        "seo:audit": "node scripts/seo-validation-report.js",
        "seo:audit:powershell": "pwsh -File seo-audit-simple.ps1"
    },
    "description": "Mark Hazleton's Blog",
    "keywords": [
        "css",
        "sass",
        "html",
        "responsive"
    ],
    "homepage": "https://github.com/markhazleton/markhazleton-blog",
    "bugs": {
        "url": "https://github.com/markhazleton/markhazleton-blog/issues",
        "email": "mark@markhazleton.com"
    },
    "license": "MIT",
    "author": "Mark Hazleton (https://markhazleton.com)",
    "contributors": [
        "David Miller (https://davidmiller.io/)",
        "Mark Hazleton (https://markhazleton.com)"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/markhazleton/markhazleton-blog.git"
    },
    "dependencies": {
        "cheerio": "^1.1.0",
        "devicon": "^2.16.0",
        "fontawesome-free": "^1.0.4",
        "fs-extra": "^11.3.0",
        "g": "^2.0.1",
        "glob": "^11.0.3",
        "npm-check-updates": "^18.0.1",
        "prismjs": "^1.30.0",
        "terser": "^5.43.1"
    },
    "devDependencies": {
        "autoprefixer": "10.4.21",
        "bootstrap": "^5.3.7",
        "bootstrap-icons": "^1.13.1",
        "bootswatch": "^5.3.7",
        "browser-sync": "^3.0.4",
        "chokidar": "4.0.3",
        "commander": "^14.0.0",
        "concurrently": "9.2.0",
        "cssnano": "^7.0.7",
        "postcss": "8.5.6",
        "prettier": "3.6.2",
        "pug": "3.0.3",
        "sass": "^1.89.2",
        "shelljs": "0.10.0",
        "terser-webpack-plugin": "^5.3.14",
        "upath": "^2.0.1",
        "webpack": "^5.99.9",
        "webpack-cli": "^6.0.1"
    }
}

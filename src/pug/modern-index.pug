extends layouts/modern-layout

block pagehead
  title Mark Hazleton - Solutions Architect & Technology Leader
  meta(name='description', content='Mark Hazleton, a Solutions Architect, specializes in bridging technology with business goals through custom web solutions.')
  meta(name='keywords', content='Mark Hazleton, Solutions Architect, Web Development, ASP.Net, Project Management, Technology Solutions')
  link(rel='canonical', href='https://markhazleton.com/')

block layout-content
  // Hero Section
  section.hero-section#about(role='banner')
    .container
      .row.justify-content-center
        .col-lg-8.hero-content
          img.hero-image(src='https://markhazleton.com/assets/img/MarkHazleton.jpg', alt='Mark Hazleton')
          h1.display-4.fw-bold.mb-4 Mark Hazleton
          p.lead.mb-4 Solutions Architect | Lifelong Learner | Technology Leader
          p.mb-4 Passionate for solutions which make technology work for business. Not sidetracked by sizzle.
          .mb-4
            span.tech-badge .NET
            span.tech-badge Azure
            span.tech-badge C#
            span.tech-badge Project Management
            span.tech-badge AI/ML
          a.btn.btn-light.btn-lg.me-3(href='#projects')
            i.bi.bi-arrow-down.me-2
            | View My Work
          a.btn.btn-outline-light.btn-lg(href='#contact')
            i.bi.bi-envelope.me-2
            | Get In Touch

  // Stats Section
  section.stats-section
    .container
      .row
        .col-md-3.col-sm-6
          .stat-card
            .stat-number 25+
            .stat-label Years Experience
        .col-md-3.col-sm-6
          .stat-card
            .stat-number 150+
            .stat-label Domains Hosted
        .col-md-3.col-sm-6
          .stat-card
            .stat-number 80+
            .stat-label Articles Written
        .col-md-3.col-sm-6
          .stat-card
            .stat-number 12+
            .stat-label Active Projects

  // Experience Section
  section.py-5#experience
    .container
      h2.section-title.text-center Professional Experience
      .row
        .col-lg-8.mx-auto
          .experience-item
            h4 Solutions Architect
            h5.text-muted Baylor Scott & White Health
            p.text-muted.mb-2 Current
            p Responsible for the delivery of comprehensive and cost-effective digital solutions. Designing, developing, implementing, and releasing high-quality custom software solutions using Scrum and Agile methodologies.

          .experience-item
            h4 Founder & Solutions Architect
            h5.text-muted Control Origins
            p.text-muted.mb-2 2008 - Present
            p Empowering organizations with innovative technology solutions that drive value creation. Specializing in .NET Framework, cloud solutions, and digital transformation initiatives.

          .experience-item
            h4 Technology Consultant
            h5.text-muted Various Organizations
            p.text-muted.mb-2 2000 - 2008
            p Delivered enterprise-level solutions for major corporations including portal development, program management methodology, and technical architecture consulting.

  // Projects Section
  section.py-5.bg-light#projects
    .container
      h2.section-title.text-center Featured Projects
      .row.g-4
        // WebSpark
        .col-lg-4.col-md-6
          .card.project-card
            img.card-img-top.project-image(src='https://webspark.markhazleton.com/assets/img/webspark-logo.png', alt='WebSpark CMS', onerror="this.src='https://via.placeholder.com/400x200?text=WebSpark'")
            .card-body
              h5.card-title WebSpark CMS
              p.card-text Next-generation web content management system built with .NET 9 and Bootstrap 5. Evolution of Web Project Mechanics with modern architecture.
              .mb-3
                span.tech-badge .NET 9
                span.tech-badge Bootstrap 5
                span.tech-badge Azure
              a.btn.btn-primary(href='https://webspark.markhazleton.com', target='_blank')
                i.bi.bi-arrow-up-right.me-2
                | View Project

        // PromptSpark
        .col-lg-4.col-md-6
          .card.project-card
            img.card-img-top.project-image(src='https://webspark.markhazleton.com/assets/img/promptspark.png', alt='PromptSpark', onerror="this.src='https://via.placeholder.com/400x200?text=PromptSpark'")
            .card-body
              h5.card-title PromptSpark
              p.card-text LLM prompt management and comparison tool. Helps developers optimize AI model interactions with tracking and A/B testing capabilities.
              .mb-3
                span.tech-badge AI/ML
                span.tech-badge OpenAI
                span.tech-badge ASP.NET
              a.btn.btn-primary(href='https://webspark.markhazleton.com/promptspark', target='_blank')
                i.bi.bi-arrow-up-right.me-2
                | View Project

        // ReactSpark
        .col-lg-4.col-md-6
          .card.project-card
            img.card-img-top.project-image(src='https://reactspark.markhazleton.com/assets/react-logo.png', alt='ReactSpark', onerror="this.src='https://via.placeholder.com/400x200?text=ReactSpark'")
            .card-body
              h5.card-title ReactSpark
              p.card-text Modern portfolio website built with React 19, TypeScript, and Vite. Demonstrates contemporary web development best practices.
              .mb-3
                span.tech-badge React 19
                span.tech-badge TypeScript
                span.tech-badge Vite
              a.btn.btn-primary(href='https://reactspark.markhazleton.com', target='_blank')
                i.bi.bi-arrow-up-right.me-2
                | View Project

        // SampleMvcCRUD
        .col-lg-4.col-md-6
          .card.project-card
            img.card-img-top.project-image(src='https://samplecrud.markhazleton.com/assets/sample-crud.png', alt='Sample MVC CRUD', onerror="this.src='https://via.placeholder.com/400x200?text=Sample+CRUD'")
            .card-body
              h5.card-title Sample MVC CRUD
              p.card-text Demonstration of ASP.NET MVC CRUD operations with modern .NET features. Educational resource for developers.
              .mb-3
                span.tech-badge .NET 9
                span.tech-badge MVC
                span.tech-badge Entity Framework
              a.btn.btn-primary(href='https://samplecrud.markhazleton.com', target='_blank')
                i.bi.bi-arrow-up-right.me-2
                | View Project

        // Project Mechanics
        .col-lg-4.col-md-6
          .card.project-card
            img.card-img-top.project-image(src='https://markhazleton.com/assets/img/pmcontrolorigins.png', alt='Project Mechanics', onerror="this.src='https://via.placeholder.com/400x200?text=Project+Mechanics'")
            .card-body
              h5.card-title Project Mechanics
              p.card-text Resource sharing insights and strategies on effective project management and IT service delivery. Based on real-world experience.
              .mb-3
                span.tech-badge Project Management
                span.tech-badge Leadership
                span.tech-badge Best Practices
              a.btn.btn-primary(href='https://markhazleton.com/projectmechanics/', target='_blank')
                i.bi.bi-arrow-up-right.me-2
                | View Project

        // Data Analysis Demo
        .col-lg-4.col-md-6
          .card.project-card
            img.card-img-top.project-image(src='https://markhazleton.com/assets/img/dataanalysiscontrolorigins.png', alt='Data Analysis Demo', onerror="this.src='https://via.placeholder.com/400x200?text=Data+Analysis'")
            .card-body
              h5.card-title Data Analysis Demo
              p.card-text Demonstration of data analysis capabilities using .NET Framework and CSV files. Interactive charts and pivot tables.
              .mb-3
                span.tech-badge Data Science
                span.tech-badge Charts
                span.tech-badge CSV Processing
              a.btn.btn-primary(href='https://dataanalysisdemo.markhazleton.com', target='_blank')
                i.bi.bi-arrow-up-right.me-2
                | View Project

      .text-center.mt-5
        a.btn.btn-outline-primary.btn-lg(href='https://github.com/markhazleton', target='_blank')
          i.fab.fa-github.me-2
          | View All Projects on GitHub

  // Articles Section
  section.py-5#articles
    .container
      h2.section-title.text-center Latest Articles
      .row
        .col-lg-8.mx-auto
          .card.article-card
            .card-body
              .d-flex.justify-content-between.align-items-start.mb-2
                span.badge.bg-primary AI & Development
                small.text-muted January 2025
              h5.card-title
                a.text-decoration-none(href='/articles/ai-and-critical-thinking-in-software-development.html') AI and Critical Thinking in Software Development
              p.card-text Explore the impact of AI on critical thinking in software development and discover strategies to balance AI efficiency with human creativity.

          .card.article-card
            .card-body
              .d-flex.justify-content-between.align-items-start.mb-2
                span.badge.bg-success React Development
                small.text-muted December 2024
              h5.card-title
                a.text-decoration-none(href='/articles/building-real-time-chat-with-react-signalr-and-markdown-streaming.html') Building Real-Time Chat with React, SignalR, and Markdown Streaming
              p.card-text Learn how to build a real-time React chat app with TypeScript, SignalR for live messaging, and streaming Markdown rendering.

          .card.article-card
            .card-body
              .d-flex.justify-content-between.align-items-start.mb-2
                span.badge.bg-warning Project Management
                small.text-muted November 2024
              h5.card-title
                a.text-decoration-none(href='/projectmechanics/solution-architect-technology-decisions-that-impact-business.html') Solution Architect Technology Decisions that Impact Business
              p.card-text A comprehensive guide for solution architects on aligning technology decisions with business goals and outcomes.

      .text-center.mt-4
        a.btn.btn-outline-primary(href='/articles/')
          i.bi.bi-book.me-2
          | View All Articles

  // Contact Section
  section.py-5.bg-light#contact
    .container
      h2.section-title.text-center Get In Touch
      .row.justify-content-center
        .col-lg-8
          .text-center
            p.lead.mb-4 Interested in discussing technology solutions, project management strategies, or potential collaborations? I'm always open to connecting with fellow technology professionals and business leaders.

            .row
              .col-md-4.mb-3
                .d-flex.flex-column.align-items-center
                  i.fab.fa-linkedin.fa-3x.text-primary.mb-3
                  h5 LinkedIn
                  a.btn.btn-outline-primary(href='https://www.linkedin.com/in/markhazleton/', target='_blank') Connect with Me
              .col-md-4.mb-3
                .d-flex.flex-column.align-items-center
                  i.fab.fa-github.fa-3x.text-dark.mb-3
                  h5 GitHub
                  a.btn.btn-outline-dark(href='https://github.com/markhazleton/', target='_blank') View My Code
              .col-md-4.mb-3
                .d-flex.flex-column.align-items-center
                  i.fab.fa-youtube.fa-3x.text-danger.mb-3
                  h5 YouTube
                  a.btn.btn-outline-danger(href='https://www.youtube.com/@MarkHazleton', target='_blank') Watch Videos

  // Footer
  footer
    .container
      .row
        .col-md-6.mb-4
          h5.mb-3 Mark Hazleton
          p.text-light Solutions Architect passionate for solutions which make technology work for business. Lifelong learner, not sidetracked by sizzle.
          .social-icons
            a(href='https://www.linkedin.com/in/markhazleton/', target='_blank', rel='noopener noreferrer', aria-label='LinkedIn')
              i.fab.fa-linkedin-in
            a(href='https://github.com/markhazleton/', target='_blank', rel='noopener noreferrer', aria-label='GitHub')
              i.fab.fa-github
            a(href='https://www.youtube.com/@MarkHazleton', target='_blank', rel='noopener noreferrer', aria-label='YouTube')
              i.fab.fa-youtube
            a(href='https://twitter.com/markhazleton/', target='_blank', rel='noopener noreferrer', aria-label='Twitter')
              i.fab.fa-twitter
        .col-md-3.mb-4
          h6.mb-3 Quick Links
          ul.list-unstyled.footer-links
            li: a(href='#about') About
            li: a(href='#experience') Experience
            li: a(href='#projects') Projects
            li: a(href='#articles') Articles
            li: a(href='#contact') Contact
        .col-md-3.mb-4
          h6.mb-3 Resources
          ul.list-unstyled.footer-links
            li: a(href='/projectmechanics/') Project Mechanics
            li: a(href='https://webspark.markhazleton.com') WebSpark
            li: a(href='/rss.xml') RSS Feed
            li: a(href='/sitemap.xml') Sitemap

      hr.my-4
      .row
        .col-12.text-center
          p.mb-0 &copy; #{new Date().getFullYear()} Mark Hazleton. All rights reserved.

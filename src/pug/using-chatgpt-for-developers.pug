extends layouts/modern-layout

block variables
  - var pageTitle = 'Using ChatGPT for C# Development | Mark Hazleton'
  - var pageDescription = 'Unlock the potential of ChatGPT for C# development with Mark Hazleton. Explore real-world examples, improve code quality, and enhance developer productivity with ChatGPT.'
  - var pageKeywords = 'ChatGPT, C# development, AI tools, code quality, developer productivity, Mark Hazleton, GitHub Copilot, software engineering, OpenAI'
  - var pageCanonical = 'https://markhazleton.com/using-chatgpt-for-developers.html'
  - var pageAuthor = 'Mark Hazleton'
  - var publishedDate = '2023-04-15'
  - var modifiedDate = '2025-05-30'
  - var estimatedReadTime = '10'


extends ../layouts/modern-layout

//- Import standardized article mixins
include ../modules/article-mixins

//- Article Template Stub for Mark Hazleton Blog - UPDATED WITH STANDARDIZATION
//-
//- USAGE:
//- 1. Copy this file and rename it to your article slug (e.g., my-new-article.pug)
//- 2. Add your article metadata to src/articles.json with the same slug
//- 3. Replace the placeholder content below with your actual article content
//- 4. SEO metadata (title, description, keywords, Open Graph, etc.) will be
//-    automatically generated from articles.json by the modern-layout
//- 5. Build with: npm run build:pug
//- 6. Use the standardized mixins for consistent formatting

block layout-content
  br

  //- Use standardized hero section
  +articleHero(
    'Article Title Here',
    'Article Subtitle Here',
    'Brief article summary or introduction paragraph goes here.',
    'bi.bi-lightbulb'
  )

  //- Main Article Content
  article#main-article
    .container
      .row
        .col-lg-8.mx-auto

          //- Use standardized article header
          +articleHeader(article, {
            title: 'Article Title Here',
            subtitle: 'Article Subtitle Here',
            publishedDate: new Date().toISOString(),
            author: 'Mark Hazleton',
            readTime: '5'
          })

          //- Optional: Add table of contents for longer articles
          //- +tableOfContents([
          //-   { href: '#main-section', text: 'Main Section Title' },
          //-   { href: '#additional-section', text: 'Additional Section Title' },
          //-   { href: '#conclusion', text: 'Conclusion' }
          //- ])

          //- Article Content Section using standardized section mixin
          +articleSection('main-section', 'Main Section Title', 'bi.bi-graph-up-arrow', 'success')
            p.mb-4
              | Main article content goes here. This is where you'll write your detailed content.

            //- Example of using other standardized components:

            //- External link example
            //- +externalLinkButton('https://example.com', 'External Resource Title')

            //- Image with caption example
            //- +articleImage('/assets/img/example.png', 'Alt text', 'Image caption')

            //- Alert box example
            //- +alertBox('info', 'Important Note', 'This is important information for readers.')

          //- Additional sections can be added using the mixin pattern
          //- +articleSection('additional-section', 'Additional Section Title', 'bi.bi-diagram-3', 'info')
          //-   p.lead.mb-4
          //-     | Additional section content goes here.

        //- Sidebar or extra content can be added here if needed

  //- Use standardized conclusion section
  +conclusionSection('Conclusion', 'bi.bi-trophy')
    p.lead.mb-4
      | Summary of key points from the article.

    //- Use key takeaway mixin
    +keyTakeaway('Key Takeaway', 'Main insight or actionable takeaway from the article.')

    //- Use feature cards for highlights
    +featureCards([
      {
        icon: 'bi.bi-code-slash',
        title: 'Technical Excellence',
        content: 'Description of technical aspects covered in the article.'
      },
      {
        icon: 'bi.bi-clock-history',
        title: 'Best Practices',
        content: 'Description of best practices and recommendations.'
      }
    ])

    p.mb-0
      | Final thoughts and call to action or next steps.

  //- Optional: Back to top button for long articles
  //- +backToTopButton()


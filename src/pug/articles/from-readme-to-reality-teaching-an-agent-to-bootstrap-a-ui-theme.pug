extends ../layouts/modern-layout

block variables
  - var pageTitle = 'From README to Reality: Teaching an Agent to Bootstrap a UI Theme | Mark Hazleton'
  - var pageDescription = 'How I used a smart NuGet package README and Visual Studio Code\'s agent mode to auto-install and configure a UI theme. See the live demo using WebSpark.Bootswatch.'
  - var pageKeywords = 'NuGet, WebSpark.Bootswatch, README-driven development, AI agents, Bootstrap themes, Visual Studio Code, automation, PrismJS, Mark Hazleton'
  - var pageCanonical = 'https://markhazleton.com/articles/from-readme-to-reality-teaching-an-agent-to-bootstrap-a-ui-theme.html'
  - var pageAuthor = 'Mark Hazleton'
  - var publishedDate = '2024-12-10'
  - var modifiedDate = '2025-05-28'
  - var estimatedReadTime = '6'


                  span.badge.bg-info.text-white Bootswatch
                  span.badge.bg-danger.text-white Visual Studio Code
                  span.badge.bg-dark.text-white GitHub Copilot

            // Related Articles
            .card.shadow-sm
              .card-header.bg-dark.text-white
                h5.mb-0
                  i.bi.bi-collection.me-2
                  | Related Articles
              .card-body

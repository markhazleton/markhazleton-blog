extends layouts/modern-layout

block pagehead
  // Homepage-specific metadata overrides
  meta(name='description', content='Mark Hazleton - Solutions Architect specializing in .NET, Azure, and project management. 25+ years experience bridging technology with business goals. Browse 80+ technical articles and project insights.')
  meta(name='keywords', content='Mark Hazleton, Solutions Architect, .NET Developer, Azure Cloud, Project Management, ASP.NET Core, Software Engineering, Technology Consultant, Web Development, Dallas Texas')

  // Additional SEO enhancements for homepage
  meta(name='theme-color', content='#2c3e50')
  meta(name='msapplication-TileColor', content='#2c3e50')
  meta(name='application-name', content='Mark Hazleton')

block og_overrides
  // Enhanced Open Graph for homepage
  meta(property='og:description', content='Solutions Architect with 25+ years experience. Explore 80+ technical articles covering .NET, Azure, project management, and software engineering best practices.')
  meta(property='og:image:alt', content='Mark Hazleton - Solutions Architect and Technology Leader')

block twitter_overrides
  // Enhanced Twitter Cards for homepage
  meta(name='twitter:description', content='Solutions Architect with 25+ years experience. Explore 80+ technical articles covering .NET, Azure, project management, and software engineering.')
  meta(name='twitter:image:alt', content='Mark Hazleton - Solutions Architect and Technology Leader')
  block additional_structured_data
  // Homepage-specific structured data
  script(type="application/ld+json").
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Mark Hazleton - Solutions Architect",
      "url": "https://markhazleton.com",
      "description": "Homepage of Mark Hazleton, Solutions Architect specializing in .NET, Azure, and project management",
      "publisher": {
        "@type": "Person",
        "@id": "https://markhazleton.com/#person"
      },
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://markhazleton.com/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      },
      "mainEntity": {
        "@type": "ItemList",
        "name": "Technical Articles",
        "description": "Collection of 80+ technical articles covering .NET, Azure, project management, and software engineering",
        "numberOfItems": "80+"        }
    }

block layout-content
  // Hero/About Section
  include modules/modern-about.pug

  // Stats Section
  section.stats-section
    .container
      .row
        .col-md-3.col-sm-6
          .stat-card
            .stat-number 25+
            .stat-label Years Experience
        .col-md-3.col-sm-6
          .stat-card
            .stat-number 150+
            .stat-label Domains Hosted
        .col-md-3.col-sm-6
          .stat-card
            .stat-number 80+
            .stat-label Articles Written
        .col-md-3.col-sm-6
          .stat-card
            .stat-number 12+
            .stat-label Active Projects

  // Articles Section
  include modules/modern-articles.pug
  // Projects
  include modules/modern_projects.pug
  
  // Experience Section
  include modules/modern-experience.pug

  // Contact Section
  section.py-5.bg-light#contact
    .container
      h2.section-title.text-center Get In Touch
      .row.justify-content-center
        .col-lg-8
          .text-center
            p.lead.mb-4 Interested in discussing technology solutions, project management strategies, or potential collaborations? I'm always open to connecting with fellow technology professionals and business leaders.

            .row
              .col-md-4.mb-3
                .d-flex.flex-column.align-items-center
                  i.fab.fa-linkedin.fa-3x.text-primary.mb-3
                  h5 LinkedIn
                  a.btn.btn-outline-primary(href='https://www.linkedin.com/in/markhazleton/', target='_blank') Connect with Me
              .col-md-4.mb-3
                .d-flex.flex-column.align-items-center
                  i.fab.fa-github.fa-3x.text-dark.mb-3
                  h5 GitHub
                  a.btn.btn-outline-dark(href='https://github.com/markhazleton/', target='_blank') View My Code
              .col-md-4.mb-3
                .d-flex.flex-column.align-items-center
                  i.fab.fa-youtube.fa-3x.text-danger.mb-3
                  h5 YouTube
                  a.btn.btn-outline-danger(href='https://www.youtube.com/@MarkHazleton', target='_blank') Watch Videos


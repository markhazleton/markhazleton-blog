block variables
doctype html
- var today = new Date();
- var yyyy = today.getFullYear();
- var mm = ('0' + (today.getMonth() + 1)).slice(-2);
- var dd = ('0' + today.getDate()).slice(-2);
- var dateString = '' + yyyy + mm + dd;
html(lang='en')
  head
    // Essential Meta Tags
    meta(charset="UTF-8")
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='author', content='Mark Hazleton')
    meta(name='robots', content='index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1')

    // Default metadata (can be overridden in child templates)
    title Mark Hazleton - Solutions Architect & Technology Leader
    meta(name='description', content='Mark Hazleton - Solutions Architect, lifelong learner, passionate for solutions which make technology work for business. Specializing in .NET, cloud solutions, and project management.')
    meta(name='keywords', content='Mark Hazleton, Solutions Architect, .NET, Azure, project management, web development, technology solutions, business goals')

    // Page-specific metadata block
    block pagehead    // Default canonical (can be overridden)
    block canonical
      link(rel='canonical', href='https://markhazleton.com/')

    // Open Graph Meta Tags (defaults)
    meta(property='og:title', content='Mark Hazleton - Solutions Architect & Technology Leader')
    meta(property='og:description', content='Solutions Architect passionate for solutions which make technology work for business. Not sidetracked by sizzle.')
    meta(property='og:type', content='website')
    meta(property='og:url', content='https://markhazleton.com/')
    meta(property='og:image', content='https://markhazleton.com/assets/img/MarkHazleton.jpg')
    meta(property='og:image:width', content='1200')
    meta(property='og:image:height', content='630')
    meta(property='og:image:alt', content='Mark Hazleton - Solutions Architect')
    meta(property='og:site_name', content='Mark Hazleton')
    meta(property='og:locale', content='en_US')

    // Additional Open Graph overrides
    block og_overrides

    // Twitter Card Meta Tags (defaults)
    meta(name='twitter:card', content='summary_large_image')
    meta(name='twitter:site', content='@markhazleton')
    meta(name='twitter:creator', content='@markhazleton')
    meta(name='twitter:title', content='Mark Hazleton - Solutions Architect & Technology Leader')
    meta(name='twitter:description', content='Solutions Architect passionate for solutions which make technology work for business. Not sidetracked by sizzle.')
    meta(name='twitter:image', content='https://markhazleton.com/assets/img/MarkHazleton.jpg')
    meta(name='twitter:image:alt', content='Mark Hazleton - Solutions Architect')

    // Additional Twitter Card overrides
    block twitter_overrides    // Performance optimization - No external CDN dependencies

    // Favicon and app icons
    link(rel="shortcut icon", href="/assets/img/favicon.ico")
    link(rel='icon', type='image/x-icon', href='assets/img/favicon.ico')
    link(rel='apple-touch-icon', sizes='180x180', href='/apple-touch-icon.png')
    link(rel='icon', type='image/png', sizes='32x32', href='/favicon-32x32.png')
    link(rel='icon', type='image/png', sizes='16x16', href='/favicon-16x16.png')
    link(rel='manifest', href='/site.webmanifest')

    // Modern Layout Styles (includes Bootstrap 5, Bootstrap Icons, Font Awesome, PrismJS)
    link(href='/css/modern-styles.css', rel='stylesheet')

